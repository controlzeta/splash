@model ZoneWiFi.Models.RegisterModel
@{
    ViewBag.Title = "Registrarse";
}
<div class="container">
    <hgroup class="title">
        <h1>@ViewBag.Title.</h1>
        <h2>Cree una cuenta nueva.</h2>
    </hgroup>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

    <div class="col-lg-12" id="login">
        <h2>Formulario de registro</h2>
        <div>
            <div>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder ="Nombre de Usuario"})
            </div>
            <div>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" , placeholder ="Contraseña"})
            </div>
            <div>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confima Contraseña"})
            </div>
        </div>
            <input type="submit" value="Registrarse" />
     </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
