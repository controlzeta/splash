@{
    ViewBag.Title = "Zone Wifi";
}

<div class="row">
    <div class="row" style="padding-top:1%;">
        <div id="ads" class="col-md-6 hidden-sm hidden-xs">
            @Html.Partial("~/Views/Shared/_Promociones.cshtml")
        </div>
        <div id="login" class="col-md-6 col-sm-12 col-xs-12" >
            <div class="inner">
                <div class="col-md-2"></div>
                <div class="col-md-8 col-xs-12" style="padding:10px;">
                    <span class="icon major fa-wifi"></span>
                    <h1>
                        Bienvenido a <strong>Walmart</strong>, Te invitamos
                        conectarte gratuitamente a nuestro <a href="#">WIFI</a>.
                    </h1>
                    <img src="images/att.png" style="width:30%; padding-top:10px;">
                    <div class="row" style="padding:10px;">
                        <div class="col-md-12" style="padding:10px;"><input placeholder="Escribe tu nombre:" class="form-control"></div>
                        <div class="col-md-12" style="padding-bottom:10px;">
                            <div class="col-md-6">
                                <input type="radio" name="radio" id="radio1" class="radio" />
                                <label for="radio1">Masculino</label>
                            </div>
                            <div class="col-md-6">
                                <input type="radio" name="radio" id="radio2" class="radio" />
                                <label for="radio2">Femenino</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-6 col-sm-12" style="padding:12px;">
                                    <select id="edad" class="form-control">
                                        <option value="0">Edad</option>
                                        <option value="13">13</option>
                                        <option value="14">14</option>
                                        <option value="15">15</option>
                                        <option value="16">16</option>
                                        <option value="17">17</option>
                                        <option value="18">18</option>
                                        <option value="19">19</option>
                                        <option value="20">20</option>
                                        <option value="21">21</option>
                                    </select>
                                </div>
                                <div class="col-md-6 col-sm-12" style="padding:7px;">
                                    <input placeholder="Código Postal:" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2"></div>
                </div>
                <div class="row">
                    <div class="col-md-12" style="padding-top:10px;">
                        <div class="col-md-1"></div>
                        <div class="col-md-10 col-xs-12">
                            <div class="col-md-4" style="padding:3px;"><a href="welcome.html" class="btn btn-md btn-facebook"><i class="fa fa-facebook" aria-hidden="true"></i>  Facebook</a></div>
                            <div class="col-md-4" style="padding:3px;"><a href="welcome.html" class="btn btn-md btn-twitter"><i class="fa fa-twitter" aria-hidden="true"></i>  Twitter</a></div>
                            <div class="col-md-4" style="padding:3px;"><a href="welcome.html" class="btn btn-md btn-google"><i class="fa fa-google-plus" aria-hidden="true"></i>  Google+</a></div>
                        </div>
                        <div class="col-md-1"></div>
                    </div>
                </div>
                <div class="col-md-12" style="padding:10px;">
                    <a data-toggle="modal" data-target="#myModal">Ver políticas de Privacidad</a>
                </div>
                <ul class="actions">
                    <li>@Html.ActionLink("Registrate", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "button scrolly", id = "registerLink" })</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Shared/_Modal.cshtml")